{
  "displayName": "Charisma",
  "name": "charisma-ai",
  "description": "Charisma AI LLM Client",
  "version": "2.0.6",
  "main": "./node_modules/.dev/main/index.js",
  "resources": "src/resources",
  "author": {
    "name": "Josh Di-Duca",
    "email": "josh@di-duca.co.uk"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch --inspect=9229 --remote-debugging-port=9222",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "node ./bin/modules/postbuild/index.js",
    "prebuild": "run-s compile:app compile:packageJSON",
    "build": "./node_modules/.bin/electron-builder",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "node ./bin/modules/release/index.js",
    "release": "electron-builder --publish always",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.4.0",
    "@emotion/react": "^11.14.0",
    "@heroui/react": "^2.7.6",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.9.0",
    "chromadb": "^2.3.0",
    "chromadb-default-embed": "^2.14.0",
    "electron-log": "^5.3.4",
    "electron-router-dom": "^1.0.5",
    "framer-motion": "^12.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/plugin-react": "^4.0.4",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^23.6.0",
    "electron-extension-installer": "^1.2.0",
    "electron-vite": "^1.0.27",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "open": "8.4.2",
    "prettier": "^3.0.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "sass": "^1.64.2",
    "semver": "^7.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ]
  },
  "eslintIgnore": [
    "dist"
  ]
}
