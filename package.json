{
  "displayName": "Charisma",
  "name": "charisma-ai-studio",
  "description": "Charisma Studio",
  "version": "0.0.7",
  "main": "./node_modules/.dev/main/index.js",
  "resources": "src/resources",
  "author": {
    "name": "Josh Di-Duca",
    "email": "josh@di-duca.co.uk"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "predev": "run-s clean:dev css-regen",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "tsx ./src/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev css-regen compile:app compile:packageJSON",
    "build": "pnpm electron-builder",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/lib/electron-app/release/modules/release.ts",
    "release": "electron-builder --publish always",
    "clean:dev": "rimraf ./node_modules/.dev",
    "css-regen": "npx @tailwindcss/cli -i ./src/renderer/input.css -o ./src/renderer/output.css --minify",
    "test": "vitest"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@heroui/react": "2.8.0-beta.6",
    "@langchain/community": "^0.3.42",
    "@langchain/core": "^0.3.55",
    "@langchain/ollama": "^0.2.0",
    "@langchain/textsplitters": "^0.1.0",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/jest-dom": "^6.7.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "chromadb": "^2.3.0",
    "chromadb-default-embed": "^2.14.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.3.4",
    "electron-root-path": "^1.1.0",
    "electron-router-dom": "^2.1.0",
    "extract-zip": "^2.0.1",
    "file-type": "^20.5.0",
    "framer-motion": "^12.9.2",
    "fs-extra": "^11.3.0",
    "google-sr": "^5.0.0",
    "hnswlib-node": "^3.0.0",
    "langchain": "^0.3.24",
    "lodash": "^4.17.21",
    "mammoth": "^1.10.0",
    "nodejs-whisper": "^0.2.6",
    "ollama": "0.5.17",
    "pcm-player": "^0.0.18",
    "pdf-parse": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.2.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "threads": "^1.7.0",
    "uuid": "^11.1.0",
    "word-extractor": "^1.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.15.2",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/semver": "^7.5.8",
    "@vitejs/plugin-react": "^4.0.4",
    "code-inspector-plugin": "^0.20.1",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-extension-installer": "^1.2.0",
    "electron-vite": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "open": "^10.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "sass": "^1.64.2",
    "semver": "^7.5.4",
    "tailwindcss": "^4.1.7",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.1.6",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ]
  },
  "eslintIgnore": [
    "dist"
  ]
}
